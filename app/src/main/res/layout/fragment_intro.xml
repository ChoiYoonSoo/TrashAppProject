<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.IntroFragment">

    <ImageView
        android:id="@+id/introSplashTitleImage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="198dp"
        android:background="@drawable/title1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/introSplashTitleImage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/title2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/introSplashTitleImage1" />

    <Button
        android:id="@+id/introLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dimens_margin"
        android:layout_marginRight="@dimen/dimens_margin"
        android:background="@drawable/shape_button_border"
        android:fontFamily="@font/pretendardregular"
        android:text="로그인/회원가입"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introSplashTitleImage2" />

    <Button
        android:id="@+id/introKaKaoBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/dimens_margin"
        android:layout_marginTop="16dp"
        android:layout_marginRight="@dimen/dimens_margin"
        android:background="@drawable/kakao_button_border"
        android:drawableLeft="@drawable/kakao_image"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="카카오톡으로 시작하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/introLoginBtn" />

    <TextView
        android:id="@+id/startWithoutLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/pretendardregular"
        android:text="@string/startWithoutLogin"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introKaKaoBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>