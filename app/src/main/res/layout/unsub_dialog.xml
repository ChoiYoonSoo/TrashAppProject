<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="179dp"
    android:background="@drawable/login_button_border"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/unSubDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:text="탈퇴가 완료됐습니다.\n이용해주셔서 감사합니다."
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/reportBorder"
        android:fontFamily="@font/pretendardregular"/>
    
    <Button
        android:id="@+id/unsubConfirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/unSubDialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/base_button_border"
        android:text="확인"
        android:textSize="16sp"
        android:textColor="@color/grey"
        android:fontFamily="@font/pretendardregular"/>


</androidx.constraintlayout.widget.ConstraintLayout>