<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/report_dialog_border">

    <TextView
        android:id="@+id/adminDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens44dp"
        android:fontFamily="@font/pretendardregular"
        android:text="삭제하시겠습니까?"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/adminDialogConfirm"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/dimens70dp"
        android:layout_marginTop="@dimen/dimens44dp"
        android:background="@drawable/base_button_border"
        android:fontFamily="@font/pretendardregular"
        android:text="삭제"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:textSize="@dimen/dimens16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adminDialogTitle" />

    <Button
        android:id="@+id/adminDialogCancel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dimens44dp"
        android:layout_marginRight="@dimen/dimens70dp"
        android:background="@drawable/base_button_border"
        android:fontFamily="@font/pretendardregular"
        android:text="취소"
        android:textColor="@color/grey"
        android:textSize="@dimen/dimens16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adminDialogTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>