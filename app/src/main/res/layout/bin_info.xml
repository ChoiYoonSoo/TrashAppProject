<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/rounded_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/binInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/binTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardregular"
            android:text="글샘공원"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/binDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pretendardregular"
            android:text="서울 송파구 문정동 625"
            android:textColor="@color/grey"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/binTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:layout_width="55dp"
        android:layout_height="25dp"
        android:text="신고"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/report_button_border"
        android:padding="5dp"
        android:drawableLeft="@drawable/siren2"
        app:layout_constraintTop_toBottomOf="@id/binInfoContainer"
        android:layout_margin="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>