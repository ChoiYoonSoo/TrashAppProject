<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.SplashActivity">

    <ImageView
        android:id="@+id/splashTitleImage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/title1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="198dp">
    </ImageView>
    
    <ImageView
        android:id="@+id/splashTitleImage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/title2"
        app:layout_constraintTop_toBottomOf="@id/splashTitleImage1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>