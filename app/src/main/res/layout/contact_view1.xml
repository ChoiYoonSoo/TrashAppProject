<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/contactEmailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/contactEmailText"
        android:text="이메일 주소"
        android:fontFamily="@font/pretendardregular"
        android:textSize="12sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/contactEmailText"
        android:layout_width="0dp"
        android:layout_height="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/contactEmailTitle"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/base_button_border"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"/>
    
    <EditText
        android:id="@+id/contactEditText"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/contactEmailText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/base_button_border"
        android:hint="정확한 상담을 위해 문의사항을 자세하게 적어주세요."
        android:fontFamily="@font/pretendardregular"
        android:textSize="10sp"
        android:textColor="@color/grey"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:padding="5dp"
        />
    
    <Button
        android:id="@+id/contactViewButton1"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@id/contactEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/base_button_border"
        android:text="사진첨부"
        android:fontFamily="@font/pretendardregular"
        android:textSize="12sp"
        android:textColor="@color/red"/>

    <Button
        android:id="@+id/contactViewButton2"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@id/contactViewButton1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/base_button_border"
        android:text="보내기"
        android:fontFamily="@font/pretendardregular"
        android:textSize="12sp"
        android:textColor="@color/grey"/>

</androidx.constraintlayout.widget.ConstraintLayout>